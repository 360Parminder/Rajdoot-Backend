 # App configuration
NODE_ENV=development
PORT=8005

# Database
DATABASE=mongodb+srv://<username>:<password>@<cluster-url>/<dbname>
DATABASE_PASSWORD=<your_database_password>

# Domain settings
FRONTEND_DOMAIN=http://localhost:5173
BACKEND_DOMAIN=http://localhost:8005

# JWT settings
JWT_SECRET=<your_jwt_secret>
JWT_EXPIRES_IN=30d

# SMS / Kannel configuration
FROM_NUMBER=<your_sender_number>
KANNEL_URL=https://<your-kannel-domain>/smsbox/cgi-bin/sendsms
KANNEL_USERNAME=<your_kannel_username>
KANNEL_PASSWORD=<your_kannel_password>

# Nodemailer configuration
EMAIL_SERVICE=gmail
EMAIL=<your_email>
EMAIL_PASSWORD=<your_email_app_password>

# Razorpay configuration
RAZORPAY_KEY_ID=<your_razorpay_key_id>
RAZORPAY_KEY_SECRET=<your_razorpay_key_secret>

# MQTT / HiveMQ configuration
HIVEMQ_URL=mqtts://<your_hivemq_url>
HIVEMQ_USERNAME=<your_hivemq_username>
HIVEMQ_PASSWORD=<your_hivemq_password>
DEVICE_ID=<your_device_id>

# Google Auth / OAuth2
GOOGLE_CLIENT_ID=<your_google_client_id>
GOOGLE_CLIENT_SECRET=<your_google_client_secret>

# Session configuration
SESSION_SECRET=<your_session_secret>
